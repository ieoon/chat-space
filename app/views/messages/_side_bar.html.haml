.side_bar
  .side_bar__top
    .side_bar__top__sidebox
      .side_bar__top__sidebox__username
        = current_user.name
      .side_bar__top__sidebox__icons
        = link_to new_group_path, class:"fas" do
          %i.fas.fa-edit
        = link_to edit_user_path(current_user), class:"fas" do
          %i.fas.fa-cog        
  .side_bar__bottom
    - current_user.groups.each do |group|
      .side_bar__bottom__groups
        = link_to group_messages_path(group) do
          .side_bar__bottom__groups__name_top 
            = group.name
          .side_bar__bottom__groups__name_bottom
            = group.show_last_message